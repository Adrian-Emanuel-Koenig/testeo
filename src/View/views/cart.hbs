<html lang="es">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulario de Ingreso</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/styles.css" />
  </head>

  <body>
    {{>navbar}}
    <table class="table table-dark" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Producto</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Precio</th>
    </tr>
  </thead>
      {{#each cartItems}}
  <tbody>
    <tr>
      <th scope="row"></th>
      <td>{{this.name}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.price}}</td>
    </tr>
  </tbody>
    {{/each}}
</table>

<h2>Total de la compra: ${{total}}</h2>
{{#if cartItems}}
<form action="/comprar" method="POST" class="cartBtn">
        <input type="hidden" name="productos" value="{{cartItems}}" />
        <input type="hidden" name="total" value="{{total}}" />
        <input type="submit" value="Comprar"  class="btn btn-primary"/>
      </form>
      <form action="/vaciar" method="POST" class="cartBtn">
        <input type="hidden" name="total" value="{{total}}" />
        <input type="submit" value="Vaciar carro"  class="btn btn-danger"/>
      </form>
{{/if}}
  </body>

</html>


