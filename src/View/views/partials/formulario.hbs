<form
  id="sendForm"
  class="d-flex justify-content-center align-items-center flex-column"
  style="height: 70vh"
>
  <div class="mb-3">
    <label for="nombre" class="form-label">Nombre</label>
    <input
      type="text"
      class="form-control"
      id="nombre"
      aria-describedby="emailHelp"
      name="nombre"
    />
  </div>
  <div class="mb-3">
    <label for="precio" class="form-label">Precio</label>
    <input
      type="number"
      class="form-control"
      id="precio"
      aria-describedby="emailHelp"
      name="precio"
    />
  </div>
  <div class="mb-3">
    <label for="stock" class="form-label">Stock</label>
    <input
      type="number"
      class="form-control"
      id="stock"
      aria-describedby="emailHelp"
      name="stock"
    />
  </div>
  <div class="mb-3">
    <label for="img" class="form-label">Img URL</label>
    <input
      type="text"
      class="form-control"
      id="img"
      aria-describedby="emailHelp"
      name="img"
    />
  </div>
  <button type="submit" class="btn btn-primary">
    Cargar Producto
  </button>
</form>